{{#section "css"}}
<link rel="stylesheet" href="/css/home.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.3/css/swiper.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.3/js/swiper.min.js"></script>
{{/section}}
{{#section "js"}}
<script src="/js/home.js"></script>
{{/section}}

<!-- trending movies -->

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
  </ol>
  <!-- title -->
  <div class="content__title">Trending Course
  </div>
  <div class="carousel-inner">
    
    {{#each trending}}
    {{#if @first}}
    <div class="carousel-item active">
      {{else}}
      <div class="carousel-item">
        {{/if}}
        <div class="carousel-item__trending ">
          <div class="carousel-item__img" class="d-block w-100">
            <a href="/courses/detail?id={{id}}" class="course__link"></a>
            <img src={{image}} alt="" srcset="" />
            <div class="carousel-item__rate">
              <div class="carousel-item__rate--1">
                <h3>{{numberStudent}}</h3>
                <span>Students</span>
              </div>
              <div class="carousel-item__rate--1">
                <h3>{{sumRate}}</h3>
                <span>Ratings</span>
              </div>
              <div class="carousel-item__rate--1">
                <h3>{{rated}} <i class="fas fa-star"></i></h3>
                <div class="stars">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <div class="overlay--star" style="width: calc(100% - {{rated}}/5*100%)"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="carousel-item__detail">
            
            <a href="/courses/detail?id={{id}}" class="carousel-item__detail--name">{{name}}</a>
            <p class="carousel-item__detail--item">{{tinyDescription}}</p>
            
            <div class="carousel-item__detail--teacher">
              Teacher
              <a href="#">{{teacherName}}</a>
            </div>
            <div class="carousel-item__detail--btn">
              <a name="buy-btn" id="buy-btn" class="btn" href="#" role="button" >
                <i  class="fa fa-cart-plus" aria-hidden="true" style="margin-right: 1rem;"></i>
                Buy now
              </a>
              <a name="add-cart-btn" id="add-cart-btn" class="btn btn--bg" href="/courses/{{#if loved}}unlike{{else}}like{{/if}}?id={{id}}" role="button">
                <i  style="font-size:2.5rem;{{#if loved}}color: red;{{/if}}" class="fas fa-heart"></i>
              </a>
            </div>

          </div>
        </div>
      </div>

      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true">
        <i role="img" class="fas fa-chevron-left"></i>
      </span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true">
        <i role="img" class="fas fa-chevron-right"></i>
      </span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="courses container-fluid">
    <div class="courses__title">
      <div>
        <h2>A broad selection of courses</h2>
      </div>
      <p>Choose from 213,000 online video courses with new additions published
        every month</p>
    </div>
    
    <div class="courses__choose">
      <div class="courses__viewed">
        {{! <h3>The 10 most viewed courses</h3> }}
        <div class="container-fluid">
          <div class="row text-center mb-3">
            <div class="col-md-12">
              <h2>Most Viewed Courses</h2>
              {{! <p>Lorem Ipsum pagination consumpim in definiction.</p> }}
              <hr />
            </div>
          </div>
          <div class="row">
            <!-- Swiper -->
            <div class="swiper-container">
              <div class="swiper-wrapper">

                {{#each arrayViewed}}
                <div class="swiper-slide">
                  <div class="row">
                    {{#each courses}}
                    <div class="col-lg-3 col-md-6">
                      <div class="card" style="width: 100%;">
                        <a href="/courses/detail?id={{id}}" class="course__link"></a>
                        <img src="{{image}}" class="card-img-top" alt="..." />
                        <div class="card-body">
                          <h5 class="card-title">{{name}}</h5>
                          <h5 class="course__teacher">Teacher: {{teacherName}}</h5>

                          <div class="course__review">
                            {{>barStar}}

                            <div class="course__review-number">({{sumRate}})</div>
                          </div>

                          <div class="course__price">
                            <h4 class="course__price-new">
                              {{format_number feeO}}
                              <span class="course__price-unit">đ</span>
                            </h4>
                            <h4 class="course__price-old">
                              {{format_number fee}}
                              <span class="course__price-unit">đ</span>
                            </h4>
                          </div>

                          {{#if ../../lcAuthTeacher}}
                          {{else}}
                            {{#if ../../lcAuthAdmin}}
                              {{else}}
                                <div class="d-flex justify-content-around course__btn">
                                {{#if buyed}}
                                <a href="/courses/join?id={{id}}" role="button"class="btn mr-2"><i class="far fa-eye"></i>
                                  Learning</a>
                                {{else}}
                                <a href="/courses/enroll?id={{id}}" role="button"class="btn mr-2"><i class="fas fa-shopping-cart"></i>
                                  Buy now</a>
                                {{/if}}
                                <a href="/courses/{{#if loved}}unlike{{else}}like{{/if}}?id={{id}}" class="btn love "><i {{#if loved}} style="color: #fe4343;"{{/if}} class="fas fa-heart"></i></a>
                                </div>
                            {{/if}}
                          {{/if}}
                        </div>
                      </div>
                    </div>
                    {{/each}}

                  </div>
                </div>
                {{/each}}
              </div>
              <!-- Add Pagination -->
              <div class="swiper-pagination"></div>
              <!-- Add Arrows -->
              <div class="swiper-button-next"><i class="fas fa-chevron-right"></i></div>
              <div class="swiper-button-prev"><i class="fas fa-chevron-left"></i></div>
            </div>

          </div>
        </div>
      </div>
      <div class="courses__lastest">
        <div class="container-fluid">
          <div class="row text-center mb-3">
            <div class="col-md-12">
              <h2>The latest Courses</h2>
              {{! <p>Lorem Ipsum pagination consumpim in definiction.</p> }}
              <hr />
            </div>
          </div>
          <div class="row">
            <!-- Swiper -->
            <div class="swiper-container">
              <div class="swiper-wrapper">
                {{#each arrayLastest}}
                <div class="swiper-slide">
                  <div class="row">
                    {{#each courses}}
                    <div class="col-lg-3 col-md-6">
                      <div class="card" style="width: 100%;">
                        <a href="/courses/detail?id={{id}}" class="course__link"></a>
                        <img src="{{image}}" class="card-img-top" alt="..." />
                        <div class="card-body">
                          <h5 class="card-title">{{name}}</h5>
                          <h5 class="course__teacher">Teacher: {{teacherName}}</h5>

                          <div class="course__review">
                            {{>barStar}}

                            <div class="course__review-number">({{sumRate}})</div>
                          </div>

                          <div class="course__price">
                            <h4 class="course__price-new">
                              {{format_number feeO}}
                              <span class="course__price-unit">đ</span>
                            </h4>
                            <h4 class="course__price-old">
                              {{format_number fee}}
                              <span class="course__price-unit">đ</span>
                            </h4>
                          </div>
                           {{#if ../../lcAuthTeacher}}
                           {{else}}
                            {{#if ../../lcAuthAdmin}}
                           {{else}}
                            <div class="d-flex justify-content-around course__btn">
                            {{#if buyed}}
                              <a href="/courses/join?id={{id}}" role="button"class="btn mr-2"><i class="far fa-eye"></i>
                                Learning</a>
                            {{else}}
                              <a href="/courses/enroll?id={{id}}" role="button"class="btn mr-2"><i class="fas fa-shopping-cart"></i>
                                Buy now</a>
                            {{/if}}
                              <a href="/courses/{{#if loved}}unlike{{else}}like{{/if}}?id={{id}}" class="btn love "><i {{#if loved}} style="color: #fe4343;"{{/if}} class="fas fa-heart"></i></a>
                           </div>
                          {{/if}}
                          {{/if}}
                        </div>
                      </div>
                    </div>
                    {{/each}}


                  </div>
                </div>
                {{/each}}

              </div>
              <!-- Add Pagination -->
              <div class="swiper-pagination"></div>
              <!-- Add Arrows -->
              <div class="swiper-button-next"><i class="fas fa-chevron-right"></i></div>
              <div class="swiper-button-prev"><i class="fas fa-chevron-left"></i></div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="coures__intro">
      <img src="https://toppng.com/uploads/preview/lay-icon-play-icon-11563266312mklxafh8gy.png" alt="" />
      <div>
        Learn in-demand skills with over 213,000 video courses
