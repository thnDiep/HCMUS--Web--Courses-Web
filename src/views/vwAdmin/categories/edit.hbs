{{#section "js"}}
  <script>
    $("#addChildCategory").on('click', e => {
      e.preventDefault();
      $("#addChildCategory").off('click');
      $('#childCategoryTable tr:last').after(`
        <tr>
          <td></td>
          <td></td>
          <td>
            <input
              class="form-addChildInput"
              type="text"
              id="name"
              name="name"
            />
          </td>
          <td></td> 
          <td class="d-flex">
            <a href="" class="d-flex mr-5 link--success">
              <i class="fa fa-plus mr-2" aria-hidden="true"></i>
              add
            </a>

            <a href="" class="d-flex link--danger">
              <i class="fa fa-window-close mr-2" aria-hidden="true"></i>
              cancel
            </a>
          </td>
        </tr>
      `);

      $(".form-addChildInput").focus();
    })
  </script>
{{/section}}

<div class="container-fluid mt-0">
  <div class="admin__bar__option mt-1">
      <a href="/admin/categories/edit?id={{minus this.category.id 1}}" 
        class="btn btn--icon btn--border {{#if isFirst}}link--disabled btn--disabled{{/if}}">
        <i class="fa fa-angle-left mr-3" aria-hidden="true"></i>
        Previous
      </a>

      <a href="/admin/categories/edit?id={{add this.category.id 1}}" class="btn btn--icon btn--border">
        Next
        <i class="fa fa-angle-right ml-3" aria-hidden="true"></i>
      </a>
  </div>

  <div class="row mt-3">
    <div class="col-lg-3">
      <div class="admin__header">
        <h1 class="admin__title">Edit</h1>
      </div>
      <form class="admin__form" method="post" action="/admin/categories/edit">

        <div class="form-group">
          <label for="nameCat">ID Category</label>
          <input
            type="text"
            class="form-control"
            id="id"
            name="id"
            value="{{this.category.id}}"
            readonly
          />
        </div>

        <div class="form-group">
          <label for="nameCat">Name Category</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="{{this.category.name}}"
            autofocus
          />
        </div>

        <div class="form-group">
          <label for="parentID">Parent category</label>
          <select name="parentID" id="parentID" {{#unless this.category.parentID}}disabled{{/unless}}>
            <option value="0">None</option>

            {{#each this.parentCategories}}
              <option value={{id}} {{#if isSelected}}selected{{/if}}>{{name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="d-flex">
          <button type="submit" class="btn btn--success mr-5">Save</button>
          <a href="/admin/categories" class="btn btn--danger">Cancel</a>
        </div>
      </form>
    </div>

    {{#unless this.category.parentID}}
    <div class="col-lg-5">
      <div class="admin__header">
        <h1 class="admin__title">Child Categories
          <a href="javascript:void(0)" class="link--success" id="addChildCategory">
            <i class="ml-3 fa fa-plus" aria-hidden="true"></i>
          </a>
        </h1>
      </div>
      <table id="childCategoryTable" class="table table-bordered table--categories">
        <thead class="thead-light">
          <tr>
            <th>
                <input type="checkbox" name="idCategoryAll" id="idCategoryAll">
            </th>
            <th>#</th>
            <th>Category</th>
            <th>Number course</th>
            <th class="col-btn">Options</th>
          </tr>
        </thead>
        <tbody>
        
          {{#each this.childCategories}}
            <tr>
              <td>
                <input type="checkbox" name="idCategory" id="idCategory">
              </td>
              <td scope="row">{{id}}</td>
              <td>{{name}}</td>
              <td>{{numberCourse}}</td>
              <td class="d-flex">
                <a href="/admin/categories/edit?id={{id}}" class="d-flex mr-5 link--success" id="edit">
                  <i class="fa fa-paint-brush mr-2" aria-hidden="true"></i>
                  edit
                </a>

                <a href="#" class="d-flex {{#if numberCourse}}{{/if}} link--danger" id="delete" data-id={{id}} data-toggle="modal" data-target="#deleteCategoryModal">
                  <i class="fa fa-trash mr-2" aria-hidden="true"></i>
                  delete
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{/unless}}

    <div class="col-lg-{{#unless this.category.parentID}}4{{else}}9{{/unless}}">
       <div class="admin__header">
          <h1 class="admin__title">Courses of 
           <span>"{{this.category.name}}"</span> 
          </h1>
      </div>

      <table class="table table-bordered table--courses">
        <thead class="thead-light">
          <tr>
            <th>#</th>
            <th>Course</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.courses}}
            <tr>
              <td scope="row">{{id}}</td>
              <td>{{name}}</td>
              <td class="col-btn">
                <a
                  href="#"
                  class="d-flex link--danger"
                  id="delete"
                  data-id={{id}}
                  data-toggle="modal"
                  data-target="#deleteCourseModal"
                >
                  <i class="fa fa-trash mr-2" aria-hidden="true"></i>
                  delete
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

