{{#section "js"}}
  <script src="/js/admin/addCategory.js"></script>
{{/section}}

<div class="admin__container">
  <form
    id="formAddCategory"
    class="admin__form"
    style="width: 330px;"
    method="post"
    action="/admin/categories/add"
  >
    <div class="form-group">
      <label for="name">Name Category</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter category name"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="parentID">Select parent category</label>
      <select name="parentID" id="parentID">
        <option value="0">None</option>
        {{#each this.parentCategories}}
          <option value={{id}}>{{name}}</option>
        {{/each}}
      </select>
    </div>
    {{! //check name rá»—ng }}
    <div class="d-flex">
      <button type="submit" class="btn btn--success mr-5">Add</button>
      <a href="/admin/categories" class="btn btn--danger">Cancel</a>
    </div>
  </form>
</div>

{{! Confirm delete category }}
<div
  class="modal fade"
  id="failedAddModel"
  tabindex="-1"
  role="dialog"
  aria-labelledby="failedAddModel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="failedAddModel">Failed Add</h3>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mt-3 mb-3">
        <h1>This category name already exists</h1>
        <h3>Please enter another name</h3>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn--border"
          data-dismiss="modal"
        >OK</button>
      </div>
    </div>
  </div>
</div>