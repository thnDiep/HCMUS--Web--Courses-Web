{{#section "js"}}
  <script src="/js/admin/course.js"></script>
{{/section}}

<form class="container" method="post" action="/admin/courses/deleteByCheckbox">
  <div class="admin__header">
    <button
      type="submit"
      class="admin__btn btn btn--icon btn--danger btn--disabled submitDeleteByCheckBox"
      disabled
    >
      <i class="fa fa-trash" aria-hidden="true"></i>
    </button>
    <h1 class="admin__title">Courses</h1>
    <div></div>
  </div>

  <table class="table table-bordered table--courses">
    <thead class="thead-light">
      <tr>
        <th>
          <input type="checkbox" id="checkboxAll" />
        </th>
        <th>#</th>
        <th>Course Name</th>
        <th>Category</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.courses}}
        <tr>
          <td>
            <input
              type="checkbox"
              name="idCourses"
              class="checkboxCourse"
              value={{id}}
            />
          </td>
          <td scope="row">{{id}}</td>
          <td>{{name}}</td>
          <td>{{category}}</td>
          <td class="col-btn">
            <a
              href="#"
              class="d-flex link--danger"
              id="delete"
              data-id={{id}}
              data-toggle="modal"
              data-target="#deleteCourseModal"
            >
              <i class="fa fa-trash mr-2" aria-hidden="true"></i>
              delete
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>

{{! Form delete }}
<form id="deleteForm" method="post"></form>

{{! Confirm delete category }}
<div
  class="modal fade"
  id="deleteCourseModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="deleteCourseModal"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="deleteCourseModal">Confirm delete</h3>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mt-3 mb-3">
        <h1>Are you sure to delete this course?</h1>
      </div>
      <div class="modal-footer">
        <button
          id="deleteBtn"
          type="button"
          class="btn btn--danger"
        >Delete</button>
        <button
          type="button"
          class="btn btn--border"
          data-dismiss="modal"
        >Close</button>
      </div>
    </div>
  </div>
</div>