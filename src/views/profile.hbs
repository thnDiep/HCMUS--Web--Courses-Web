  <div class="container-fluid py-4 m-0">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center d-flex flex-column">
            <img
              src={{lcAuthUser.img}}
              alt="Avatar"
              class="rounded-circle img-fluid img_ava"
              style="width: 150px;margin:auto"
            />
            <input type="text" value={{lcAuthUser.name}} class="usernameCard1 my-3" style="font-size: 2.4rem; color:#333333;text-align:center" disabled >
            <p class="text-muted mb-1 positionCard1"><i class="fas fa-graduation-cap"></i>
              Student</p>
            <p class="text-muted mb-4 positionCard1">Ho Chi Minh City, Viet Nam</p>
          </div>
        </div>
        <form method="post">
          <div class="card mb-4 mb-lg-0">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">User name</p>
              </div>
              <div class="col-sm-6">
                <input type="text" value={{lcAuthUser.name}} class="inputName input" name="username" disabled >
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit"></i>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">Email</p>
              </div>
              <div class="col-sm-6">
                <input type="email" value={{lcAuthUser.email}} class="inputEmail input" name="email" disabled >
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit"></i>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">Current Password</p>
              </div>
              <div class="col-sm-6">
                <input type="password" value={{lcAuthUser.password}} class="inputPass input mt-3" name="currentPassword" disabled >
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit Edit-currpass mt-4"></i>
              </div>
            </div> 
            <hr />
            <div class="row rowNewPass hidden">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">New Password</p>
              </div>
              <div class="col-sm-6">
                <input type="password" value="" class="inputNewPass input" style="border: 1px solid #333333;" name="newPassword" >
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit"></i>
              </div>
            </div> 
            <div class="row">
              <div class="col-sm-12 d-flex justify-content-center">
                <button type="submit" class="btn btn--submit btnEdit" onclick="update()">EDIT</button>
              </div>
            </div>
          </div>
        </div>
        </form>
      </div>
      <div class="col-lg-8">
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body box-slider">
                <div class="flex-card">
                  <p
                    data-content="LEARNING"
                    class="mb-4 me-1 titleTransition"
                    style="font-weight: bold;font-size:2rem"
                  >LEARNING
                    <i class="fas fa-book" style="color: #6e4616;"></i></p>
                  <i
                    class="fas fa-chevron-circle-right"
                    style="font-size: larger;"
                  ></i>
                  {{! <a href="#" class="load-more-new">&nbsp;</a> }}

                </div>
                <div class="slider" style="overflow: scroll;">
                {{#each this.lesson_learned}}
                  <div
                    class="slide d-flex justify-content-between mb-1 shadow p-4 mb-2 bg-white"
                    id="slide-1"
                  >
                    <div class="carousel-item__img">
                      <img
                        src={{Img}}
                        alt=""
                      />
                    </div>
                    <div class="carousel-item__detail">

                      <h1 class="carousel-item__detail--name">{{CourseName}}</h1>
                      <div class="carousel-item__detail--teacher">
                        Teacher
                        <a href="#">{{TeacherName}}</a>
                      </div>

                    </div>
                  </div>
                  
            {{/each}}


            
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <div class="flex-card">
                  <p
                    data-content="WATCH LIST"
                    class="mb-4 me-1 titleTransitionLove"
                    style="font-weight: bold;font-size:2rem"
                  >WATCH LIST
                    <i class="fab fa-gratipay" style="color: #f84c5e;"></i></p>
                  <i
                    class="fas fa-chevron-circle-right"
                    style="font-size: larger;"
                  ></i>
                </div>

                 <div class="slider" style="overflow: scroll;">
                   {{#each this.lesson_love}}
                  <div
                    class="slide d-flex justify-content-between mb-1 shadow p-4 mb-2 bg-white"
                    id="slide-1"
                  >
                    <div class="carousel-item__img">
                      <img
                        src={{Img}}
                        alt=""
                      />
                    </div>
                    <div class="carousel-item__detail">

                      <h1 class="carousel-item__detail--name">{{CourseName}}</h1>
                      <div class="carousel-item__detail--teacher">
                        Teacher
                        <a href="#">{{TeacherName}}</a>
                      </div>

                    </div>
                  </div>
                  {{/each}}
                 
                  
                </div>
                  <div
                    class="progress-bar"
                    role="progressbar"
                    style="width: 66%"
                    aria-valuenow="66"
                    aria-valuemin="0"
                    aria-valuemax="100"
                  ></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
