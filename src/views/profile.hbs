{{#section "css"}}
  <link rel="stylesheet" href="/css/profile.css" />
  <link rel="stylesheet" href="/css/teacherProfile.css">
  {{!-- <link rel="stylesheet" href="/css/base.css"> --}}
{{/section}}
{{#section "images"}}
  <link rel="stylesheet" href="/images/background/bg1.png" /> 
{{/section}}
{{#section "js"}}
  <script src="/js/profile.js"></script>
{{/section}}
<section>
  <div class="container-fluid py-4 m-0">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center d-flex flex-column">
             <a class="rounded-circle" style="
                  background-image: url('{{this.lcAuthUser.img}}');
                "> </a>
            <form name="profileImageForm" method="post" enctype="multipart/form-data">
              <input type="file" name="image" id="file" class="inputfile" accept="image/png, image/gif, image/jpeg" />
              <label for="file"><i class="fas fa-upload"></i> Choose a file...</label>
            </form>
            <input type="text" value={{lcAuthUser.name}} class="usernameCard1 my-3" style="font-size: 2.4rem; color:#333333;text-align:center" disabled >
            <p class="text-muted mb-1 positionCard1"><i class="fas fa-graduation-cap"></i>
              Student</p>
            <p class="text-muted mb-4 positionCard1">Ho Chi Minh City, Viet Nam</p>
          </div>
        </div>
        <form method="post" action="/profile">
          <div class="card mb-4 mb-lg-0">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">User name</p>
              </div>
              <div class="col-sm-6">
                {{#if err_message_name}}
                  <input type="text" value={{lcAuthUser.name}} class="inputName input" name="name" style="border: 1px solid red;" disabled >
                {{else}}
                  <input type="text" value={{lcAuthUser.name}} class="inputName input" name="name" disabled >
                {{/if}}
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit"></i>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">Email</p>
              </div>
              <div class="col-sm-6">
               {{#if err_message_email}}
                  <input type="email" value={{lcAuthUser.email}} class="inputEmail input" name="email" style="border: 1px solid red;" disabled >
                {{err_message_email}}
                {{else}}
                  <input type="email" value={{lcAuthUser.email}} class="inputEmail input" name="email" disabled >
                {{/if}} 
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit"></i>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">Current Password</p>
              </div>
              <div class="col-sm-6">
                <input type="password" class="inputPass input mt-3 {{#if err_message_password}}border{{/if}}" name="password" disabled >
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit Edit-currpass mt-4"></i>
              </div>
            </div> 
            <hr />
            <div class="row rowNewPass">
              <div class="col-sm-4">
                <p class="mb-0 titleCard2">New Password</p>
              </div>
              <div class="col-sm-6">
                <input type="password" class="inputNewPass input" name="newPassword" disabled>
              </div>
              <div class="col-sm-2">
                <i class="far fa-edit Edit"></i>
              </div>
            </div> 
            <div class="row">
              <div class="col-sm-12 d-flex justify-content-center">
                <button type="submit" class="btn btn--submit btnEdit">EDIT</button>
              </div>
            </div>
          </div>
        </div>
        </form>
      </div>
      <div class="col-lg-8">
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body ">
                <div class="flex-card">
                  <a href="/courses/learning">
                    <p
                    data-content="LEARNING"
                    class="mb-1 me-1 titleTransition"
                    style="font-weight: bold;font-size:2rem"
                  >LEARNING
                    <i class="fas fa-book" style="color: #6e4616;"></i></p>
                  </a>
                  <a href="/courses/learning"><i
                    class="fas fa-chevron-circle-right"
                    style="font-size: larger;"
                  ></i></a>
                  {{! <a href="#" class="load-more-new">&nbsp;</a> }}

                </div>
                <div class="slider" style="overflow-y: scroll;">
                {{#each this.lesson_learned}}
                  <div
                    class="slide d-flex justify-content-between mb-1 shadow p-4 mb-2 bg-white"
                    id="slide-1"
                  >
                  <a href="/courses/detail?id={{id}}"></a>
                    <div class="carousel-item__img">
                      <img
                        src={{image}}
                        alt=""
                      />
                    </div>
                    <div class="carousel-item__detail">

                      <h1 class="carousel-item__detail--name">{{name}}</h1>
                      <div class="carousel-item__detail--teacher">
                        Teacher
                        <p>{{TeacherName}}</p>
                      </div>

                    </div>
                  </div>
                  
            {{/each}}


            
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0" style="height: 100%;">
              <div class="card-body " >
                <div class="flex-card">
                  <a href="/courses/watch-list">
                    <p
                    data-content="WATCH LIST"
                    class="mb-1 me-1 titleTransitionLove"
                    style="font-weight: bold;font-size:2rem"
                  >WATCH LIST
                    <i class="fab fa-gratipay" style="color: #f84c5e;"></i></p>
                  </a>
                  <a href="courses/watch-list">
                    <i
                    class="fas fa-chevron-circle-right"
                    style="font-size: larger;"
                  ></i>
                  </a>
                </div>

                 <div class="slider" style="overflow: scroll;">
                   {{#each this.lesson_love}}
                  <div
                    class="slide d-flex justify-content-between mb-1 shadow p-4 mb-2 bg-white"
                  >
                   <a href="/courses/detail?id={{id}}"></a>
                    <div class="carousel-item__img">
                      <img
                        src={{image}}
                        alt=""
                      />
                    </div>
                    <div class="carousel-item__detail">

                      <h1 class="carousel-item__detail--name">{{name}}</h1>
                      <div class="carousel-item__detail--teacher">
                        Teacher
                        <p>{{TeacherName}}</p>
                      </div>

                    </div>
                  </div>
                  {{/each}}
                 
                  
                </div>
                  <div
                    class="progress-bar"
                    role="progressbar"
                    style="width: 66%"
                    aria-valuenow="66"
                    aria-valuemin="0"
                    aria-valuemax="100"
                  ></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>