      {{! rate & feedback }}
      <!--Modal Launch Button-->

      <button
        type="button"
        class="btn btn-info btn-lg openmodal"
        data-toggle="modal"
        data-target="#myFeedbackForm"
        id="rate_feedback-btn"
      >Rate & feedback</button>

      <!--Division for Modal-->
      <div  id="myFeedbackForm" class="modal fade" role="dialog" id="feedbackForm">

        <!--Modal-->
        <div class="modal-dialog">

          <!--Modal Content-->
          <div class="modal-content">

            <!-- Modal Header-->
            <div class="modal-header">
              <h3>Feedback</h3>

              <!--Close/Cross Button-->
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                style="color: white;"
              >&times;</button>
            </div>

            <!-- Modal Body-->
            <div class="modal-body text-center">
              <i class="far fa-file-alt fa-4x mb-3 animated rotateIn icon1"></i>
              {{! <h3>Your opinion matters</h3> }}
              <h4>Help us improve our quality.
                <strong>Give us your feedback.</strong></h4>
              <hr />
              <h3>Your rating for this course</h3>
            </div>

            <!-- Radio Buttons for Rating-->
            <div class="form-check mb-4">
              <input name="feedback" type="radio" value="5"/>
              <label class="ml-3" style="font-size: 1.3rem;">
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                Very good
              </label>
            </div>
            <div class="form-check mb-4">
              <input name="feedback" type="radio" value="4" />
              <label class="ml-3" style="font-size: 1.3rem;">
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                Good
              </label>
            </div>
            <div class="form-check mb-4">
              <input name="feedback" type="radio" value="3"/>
              <label class="ml-3" style="font-size: 1.3rem;">
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                Mediocre
              </label>
            </div>
            <div class="form-check mb-4">
              <input name="feedback" type="radio"  value="2"/>
              <label class="ml-3" style="font-size: 1.3rem;">
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                Bad
              </label>
            </div>
            <div class="form-check mb-4">
              <input name="feedback" type="radio" value="1"/>
              <label class="ml-3" style="font-size: 1.3rem;">
                <i class="fa fa-star" aria-hidden="true"></i>
                Very Bad
              </label>
            </div>

            <!--Text Message-->
            <div class="text-center">
              <h3>Your feedback</h3>
            </div>
            <textarea
              id="feedback"
              type="textarea"
              placeholder="Your Message"
              rows="3"
              style="font-size: 1.3rem;"
            ></textarea>

            <!-- Modal Footer-->
            <div class="modal-footer">
              <button id="btnSubmit"  class="btn btn-primary" 
              data-course={{this.idCourse}}
              data-chapter={{this.idChapter}}
              data-lesson={{this.idLesson}} >
              Public
                <i class="fa fa-paper-plane"></i>
              </button>
              <a id="submitLink" href=""></a>
              <a
                href=""
                class="btn btn-outline-primary"
                data-dismiss="modal"
              >Cancel</a>
            </div>
          </div>
        </div>
      </div>
    </div>
