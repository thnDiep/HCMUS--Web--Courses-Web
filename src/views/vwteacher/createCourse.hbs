    <div class="formCreate">
      <div class="formCreate__title">
        <p>Create Course Lesson</p>
      </div>
      <hr />
      <form action="" class="formCourse">
        <div class="formCreate__titleCourse">
          <div class="d-flex justify-content-between ">
          <label>Course Title</label>
          <p class="subLabel subLabel-title hidden">This field can't be empty</p>
          </div>
          <input type="text" placeholder="Name of course" class="inputField input" />
        </div>
        <div
          class="formCreate__categoryLesson d-flex flex-wrap justify-content-between"
        >
          <div class="topics">
            <label for="">Topics</label>
            <select class="inputField">
              <option>IT & Software</option>
              <option>Development</option>
              <option>Business</option>
              <option>Add more topic...</option>
            </select>
          </div>
          <div class="updatePicture">
            <label for="fuSub">Update Picture</label>
            <input
              id="fuSub"
              type="file"
              class="file"
              data-preview-file-type="text"
              multiple
            />
          </div>
          <div class="price">
          <div class="d-flex justify-content-between ">
            <label for="">Price</label>
            <p class="subLabel subLabel-price hidden">This field can't be empty</p>
          </div>
            <div><input
                type="text"
                name="currency-field"
                id="currency-field"
                pattern="^\VNĐ\d{1,3}(,\d{3})*(\.\d+)?$"
                value=""
                data-type="currency"
                placeholder="VNĐ1,000,000.00"
                class="inputField"
              />
            </div>
          </div>
        </div>
        <div class="formCreate__summaryCourse">
          <div class="d-flex justify-content-between ">
            <label>Summary</label>
            <p class="subLabel subLabel-summary hidden">This field can't be empty</p>
          </div>
          <input
            type="text"
            placeholder="Summary of course"
            class="inputField input"
          />
        </div>

        <div class="formCreate__descriptionCourse">
          <label>Description</label>
          <textarea
            id="descriptionTextArea"
            placeholder="My Text Area"
          ></textarea>
        </div>
        <div class="formCreate__benefitCourse">
          <label>Benefit</label>
          <textarea id="benefitTextArea" placeholder="My Text Area"></textarea>
        </div>
        <div class="formCreate__requiredCourse">
          <label>Required</label>
          <textarea id="requiredTextArea" placeholder="My Text Area"></textarea>
        </div>
        <div class="formCreate__videoLesson mt-3">
          <label for="fuMain">Upload Video Documents</label>
