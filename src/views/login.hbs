{{#section "css"}}
  <link rel="stylesheet" href="/css/login.css" />
{{/section}}

<div>
  <div class="login">
    <div class="video-container">
      <video
        autoplay="true"
        playsinline="true"
        muted="true"
        loop="true"
        data-video-player-target="player"
        class="plyr__video"
      >
        <source
          src="https://static.vecteezy.com/system/resources/previews/014/195/483/mp4/glowing-colorful-neon-digital-geometric-shapes-abstract-digital-geometric-shape-moving-on-black-background-high-tech-shapes-background-geometric-high-tech-loop-animation-dynamic-shape-background-free-video.mp4"
          type="video/mp4"
        />
        <source
          src="https://static.vecteezy.com/system/resources/previews/014/195/483/glowing-colorful-neon-digital-geometric-shapes-abstract-digital-geometric-shape-moving-on-black-background-high-tech-shapes-background-geometric-high-tech-loop-animation-dynamic-shape-background-free-video.webm"
          type="video/webm"
        />
      </video>
    </div>
    <div class="form row">
      <form method="post" class="form--login col-lg-7 col-sm-0">
        <p class="form--login__mainTitle">Welcome!</p>
        <span class="form--login__subTitle">Choose from 130,000 online video
          courses with new additions
          <div>published every second month</div>
        </span>
        <div class="form--login__user-name">
          <i class="fas fa-user form--login__icon"></i>
          <input
            type="text"
            placeholder="User name"
            class="form--login__user-name__input"
          />
        </div>
        <div class="form--login__user-pass">
          <i class="fas fa-lock form--login__icon"></i>
          <input
            type="password"
            placeholder="Password"
            class="form--login__user-pass__input"
          />
        </div>
        <button href="#" class="py-3 px-1 form--login__btn">Login to Your
          Account<i
            class="fas fa-arrow-right form--login__icon-arrow"
          ></i></button>
      </form>
      {{! <img
        src="/images/background/cool-background.png"
        alt="Picture"
        class="form--pic col-lg-5 col-sm-12"
      /> }}
    </div>

  </div>
</div>